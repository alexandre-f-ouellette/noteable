<div class="form-group">
  <%= form_with(model: project, local: true) do |f| %>
    <% if project.errors.any? %>
      <div id="error_explanation">
        <h2>This project was unable to save because of <%= pluralize(project.errors.count, "error") %>.</h2>
        <h3>Details: </h3>
        <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :name, class: 'control-label required', for: :project_name %>
        <%= f.text_field :name, id: :project_name, class: 'form-control', placeholder: "Enter name" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :short_name, class: 'control-label required', for: :project_short_name %>
        <%= f.text_field :short_name, id: :project_short_name, class: 'form-control', placeholder: "Enter short name, will be used in project's URL" %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-6">
        <%= f.label :start_date, class: 'control-label', for: :project_start_date %>
        <%= f.text_field :start_date, id: :project_start_date, class: 'form-control', 'data-provide' => 'datepicker', placeholder: 'Please click to select a date' %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :end_date, class: 'control-label', for: :project_end_date %>
        <%= f.text_field :end_date, id: :project_end_date, class: 'form-control', 'data-provide' => 'datepicker', placeholder: 'Please click to select a date' %>
      </div>
    </div>

    <div class="row">
      <div class="form-group col-md-12">
        <%= f.label :description, class: 'control-label', for: :project_start_date %>
        <%= f.text_area :description, id: :project_description, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
      <div class="actions col-md-12">
        <%= f.submit :class => 'btn btn-submit' %>
      </div>
    </div>
  <% end %>
</div>
